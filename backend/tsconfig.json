{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
        "@core/*": [ "core/*" ],
        "@ports/*": [ "core/ports/*.ts" ],
        "@adapters/*": [ "adapters/*.ts" ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
